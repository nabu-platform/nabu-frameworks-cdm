<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<crud>
    <allowHeaderAsQueryParameter>true</allowHeaderAsQueryParameter>
    <broadcastCreate>false</broadcastCreate>
    <broadcastUpdate>false</broadcastUpdate>
    <coreType>nabu.frameworks.cdm.database.types.cdmInstanceRelation</coreType>
    <createPermission>cdm.manage</createPermission>
    <createRole>$user</createRole>
    <deletePermission>cdm.manage</deletePermission>
    <deleteRole>$user</deleteRole>
    <filters>
        <caseInsensitive>false</caseInsensitive>
        <key>cdmSystemId</key>
        <operator>=</operator>
        <or>false</or>
        <input>true</input>
        <vary>false</vary>
    </filters>
    <filters>
        <caseInsensitive>false</caseInsensitive>
        <key>cdmDefinitionId</key>
        <operator>=</operator>
        <or>false</or>
        <input>true</input>
        <vary>false</vary>
    </filters>
    <filters>
        <caseInsensitive>false</caseInsensitive>
        <key>sourceId</key>
        <operator>=</operator>
        <or>false</or>
        <input>true</input>
        <vary>false</vary>
    </filters>
    <filters>
        <caseInsensitive>false</caseInsensitive>
        <key>targetId</key>
        <operator>=</operator>
        <or>false</or>
        <input>true</input>
        <vary>false</vary>
    </filters>
    <filters>
        <caseInsensitive>false</caseInsensitive>
        <key>sourceId</key>
        <operator>=</operator>
        <or>false</or>
        <alias>anyId</alias>
        <input>true</input>
        <vary>false</vary>
    </filters>
    <filters>
        <caseInsensitive>false</caseInsensitive>
        <key>targetId</key>
        <operator>=</operator>
        <or>true</or>
        <alias>anyId</alias>
        <input>true</input>
        <vary>false</vary>
    </filters>
    <filters>
        <caseInsensitive>false</caseInsensitive>
        <key>active</key>
        <operator>=</operator>
        <or>false</or>
        <input>true</input>
        <vary>false</vary>
    </filters>
    <foreignFields>
        <foreignName>targetId:cdmDefinitionId:typeId</foreignName>
        <localName>targetTypeId</localName>
    </foreignFields>
    <foreignFields>
        <foreignName>cdmRelationTypeId:name</foreignName>
        <localName>relationType</localName>
    </foreignFields>
    <getPermission>cdm.list</getPermission>
    <hooks>false</hooks>
    <listPermission>cdm.list</listPermission>
    <listRole>$user</listRole>
    <provider>nabu.services.crud.provider.basic.provider</provider>
    <restLimitToUser>true</restLimitToUser>
    <updatePermission>cdm.manage</updatePermission>
    <updateRole>$user</updateRole>
    <useAsAuthorizationServiceContext>false</useAsAuthorizationServiceContext>
    <useExplicitLanguage>false</useExplicitLanguage>
    <useGlobalPermissionContext>true</useGlobalPermissionContext>
    <useLanguage>false</useLanguage>
    <useListOutputForCreate>true</useListOutputForCreate>
    <useListOutputForUpdate>true</useListOutputForUpdate>
    <useProjectAsPermissionContext>false</useProjectAsPermissionContext>
    <useServiceContextAsPermissionContext>false</useServiceContextAsPermissionContext>
    <useWebApplicationAsPermissionContext>false</useWebApplicationAsPermissionContext>
</crud>
